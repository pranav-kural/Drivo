@{
    ViewBag.Title = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Drivo</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background: url(../Content/Image/maxresdefault.jpg) no-repeat;background-size:cover">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Drivo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li id="home_tab">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Instructors", "Index", "Instructors")</li>
                    <li>@Html.ActionLink("Driving Schools", "Index", "DrivingSchools")</li>
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">

        <div class="container">
            <div class="jumbotron">
                <h1>Drivo</h1>
                <p class="lead">Drivo is an awesome online directory and listings website for searching Driving Instructors and Driving Schools around you. Search for a driving instructor or join as one, so that others can find you. You can even Register as a Driving School and manage all your instructors in one application.</p>
                <p><a class="btn btn-default" href="/Instructos/">Search Instructors</a> <a class="btn btn-default" href="/Instructor/Create/">Register as an Instructor</a> <a class="btn btn-default" href="/DrivingSchools/Create">Register Driving School</a></p>
            </div>
            
        </div>

        <hr />
        <footer class="navbar-fixed-bottom text-center" style="position:relative;font-family:Montserrat">
            <p>Built with 💗 by <a href="https://github.com/pranav-kural">Pranav Kural</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
