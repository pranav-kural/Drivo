@model Drivo.Models.DrivingSchool

@{
    ViewBag.Title = "Create";
}

<h2>Driving Schools</h2>
<div id="instructors_navigation"></div>



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Driving School Registration</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h2 class="page-header">Please fill the details about your Driving School: </h2>


        @* Driving school id will be autogenerated *@


        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @maxlength = "150" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Working_since, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Working_since, new { htmlAttributes = new { @class = "form-control", @min = "1955-12-12", @max = "2017-06-01", @style = "display:inline-block" } })
                @Html.ValidationMessageFor(model => model.Working_since, "", new { @class = "text-danger" })
                <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="right" title="How many years have you been working as an instructor?" style="color:#222;background-color:#fff;border:0"><i class="fa fa-lg fa-info-circle" aria-hidden="true"></i></button>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.About, "Tell us a little about your awesome driving school", htmlAttributes: new { @class = "control-label" })
                <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="right" title="This is what the viewers will see in the 'About' section of your Driving School profile page." style="color:#222;background-color:#fff;border:0"><i class="fa fa-lg fa-info-circle" aria-hidden="true"></i></button>
            </div>
            
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.About, 5, 100, htmlAttributes: new { @class = "form-control", @style = "max-width:40em" })
                 @Html.ValidationMessageFor(model => model.About, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Licences_training_for, htmlAttributes: new { @class = "control-label", @style = "padding-bottom:10px" })
            </div>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Licences_training_for, 3, 50, htmlAttributes: new { @class = "form-control", @style = "max-width:20em" })
                @Html.ValidationMessageFor(model => model.Licences_training_for, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Province, "Select the Province you primarly work in", htmlAttributes: new { @class = "control-label", @style = "padding-bottom:10px" })
            </div>
            <div class="col-md-10">
                <!-- Generating a select form element for Province options -->
                @Html.DropDownListFor(model => model.Province, new List<SelectListItem> {
                       new SelectListItem { Value = "ONTARIO" , Text = "Ontario" },
                       new SelectListItem { Value = "NEWFOUNDLAND AND LABRADO" , Text = "Newfoundland and Labrado" },
                       new SelectListItem { Value = "PRINCE EDWARD ISLAND" , Text = "Prince Edward Island" },
                       new SelectListItem { Value = "BRITISH COLUMBIA" , Text = "British Columbia" },
                       new SelectListItem { Value = "MANITOBA" , Text = "Monitoba" },
                       new SelectListItem { Value = "NEW BRUNSWICK" , Text = "New Brunswick" },
                       new SelectListItem { Value = "NOVA SCOTIA" , Text = "Nova Scotia" },
                       new SelectListItem { Value = "QUEBEC" , Text = "Quebec" }

                    }, "Select a Province", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Province, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Cities_of_operation, "Cities you work in (seperated by commas)", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Cities_of_operation, 3, 50, htmlAttributes: new { @class = "form-control", @style = "max-width:20em" })
                @Html.ValidationMessageFor(model => model.Cities_of_operation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Vehicles_used, "Vehicles you use for training", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Vehicles_used, 3, 50, htmlAttributes: new { @class = "form-control", @style = "max-width:20em" })
                @Html.ValidationMessageFor(model => model.Vehicles_used, "", new { @class = "text-danger" })
            </div>
        </div>

        <h3 class="page-header">Login Account information:</h3>

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @style = "display:inline-block" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="right" title="This is the name you will use to login." style="color:#222;background-color:#fff;border:0"><i class="fa fa-lg fa-info-circle" aria-hidden="true"></i></button>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PasswordHash, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PasswordHash, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit and Register" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    <script>
            $(function () {
                $('[data-toggle="tooltip"]').tooltip();


                $('#drivingSchools_navigation').load('@Url.Action("DrivingSchoolsNavigation", "DrivingSchools")');
            })
    </script>
}
